# Todoist Configuration
TODOIST_API_TOKEN=your-todoist-api-token-here

# iCalendar Feed Configuration (JSON array)
ICAL_FEED_CONFIGS=[{"name":"Work","url":"https://work.ics"},{"name":"Personal","url":"https://personal.ics"}]

# Home Assistant configuration
HA_URL=https://homeassistant.local:8123
HA_TOKEN=your-long-lived-access-token
# Optional: Skip SSL verification for self-signed certs
HA_VERIFY_SSL=true

# Refresh interval in minutes
REFRESH_INTERVAL=60

# Optional: Enable debug logging
DEBUG=false

# Redis Cache Configuration (Optional - significantly improves performance)
# REDIS_HOST=your-redis-host.redis.cache.windows.net
# REDIS_SSL_PORT=6380
# REDIS_KEY=your-redis-access-key

# Cache TTL Configuration (Optional - all values in seconds)
# Customize cache times based on your needs. Lower values = more fresh data but more API calls
# Todoist Cache Times
# CACHE_TTL_TODOIST_TASKS=60         # Task list cache (default: 60s)
# CACHE_TTL_TODOIST_PROJECTS=300     # Project list cache (default: 300s)
# CACHE_TTL_TODOIST_LABELS=600       # Label list cache (default: 600s)
# CACHE_TTL_TODOIST_SECTIONS=300     # Section list cache (default: 300s)
# CACHE_TTL_TODOIST_COMMENTS=120     # Comments cache (default: 120s)

# Home Assistant Cache Times
# CACHE_TTL_HA_STATES=3              # Entity states (default: 3s) - keep short for real-time
# CACHE_TTL_HA_SINGLE_STATE=2        # Single entity state (default: 2s)
# CACHE_TTL_HA_DEVICE_LIST=1800      # Device metadata (default: 1800s/30min)
# CACHE_TTL_HA_ENTITY_LIST=1800      # Entity metadata (default: 1800s/30min)
# CACHE_TTL_HA_AREAS=3600            # Area list (default: 3600s/1hr)
# CACHE_TTL_HA_SERVICES=3600         # Service list (default: 3600s/1hr)
# CACHE_TTL_HA_HISTORY=300           # History data (default: 300s/5min)

# Calendar Cache Times
# CACHE_TTL_CALENDAR_EVENTS=900      # Calendar events (default: 900s/15min)
# CACHE_TTL_CALENDAR_INFO=1800       # Calendar info (default: 1800s/30min)
# CACHE_TTL_CALENDAR_FEED=600        # Calendar feed data (default: 600s/10min)

# Remote Server Configuration (for server_remote.py)
# Azure Container Apps handles SSL termination
HOST=0.0.0.0
PORT=8000  # Azure Container Apps uses PORT env var
